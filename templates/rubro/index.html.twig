{% extends 'base.html.twig' %}

{% block title %}Listado de rubros{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary" href="{{ path('rubro_new') }}">Nuevo Rubro</a>
        </div>
    </div>

    <div class="row mt-3 mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Listado de Rubros</h3>

                    <div class="card-tools">
                        {#                        <div class="input-group input-group-sm" style="width: 150px;">#}
                        {#                            <input type="text" name="table_search" class="form-control float-right"#}
                        {#                                   placeholder="Search">#}

                        {#                            <div class="input-group-append">#}
                        {#                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>#}
                        {#                            </div>#}
                        {#                        </div>#}
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover">
                        <tr>
                            <th>Nombre</th>
                            <th>Activo</th>
                            <th>Fecha Creacion</th>
                            <th>Fecha Actualizacion</th>
                            <th>acciones</th>
                        </tr>

                        {% for rubro in rubros %}
                            <tr>
                                <td>{{ rubro.nombre }}</td>
                                <td>{% if rubro.activo %}
                                        <span class="badge bg-success">Si</span>
                                    {% else %}
                                        <span class="badge bg-sdanger">No</span>
                                    {% endif %}
                                </td>
                                <td>{{ rubro.fechaCreacion ? rubro.fechaCreacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ rubro.fechaActualizacion ? rubro.fechaActualizacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a class="btn btn-default" role="button"
                                       href="{{ path('rubro_edit', {'id': rubro.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">No se encontraron registros</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-12">
            {{ knp_pagination_render(rubros) }}
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary" href="{{ path('rubro_new') }}">Nuevo Rubro</a>
        </div>
    </div>
{% endblock %}
