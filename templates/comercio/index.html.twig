{% extends 'base.html.twig' %}

{% block title %}Listado de comercios{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary" href="{{ path('comercio_new') }}">Nuevo Comercio</a>
        </div>
    </div>

    <div class="row mt-3 mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Listado de Novedades</h3>

                    <div class="card-tools">
                        {#                        <div class="input-group input-group-sm" style="width: 150px;">#}
                        {#                            <input type="text" name="table_search" class="form-control float-right"#}
                        {#                                   placeholder="Search">#}

                        {#                            <div class="input-group-append">#}
                        {#                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>#}
                        {#                            </div>#}
                        {#                        </div>#}
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover">
                        <tr>
                            <th>Nombre</th>
                            <th>Direccion</th>
                            <th>Activo</th>
                            <th>Fecha Creacion</th>
                            <th>Fecha Actualizacion</th>
                            <th>acciones</th>
                        </tr>

                        {% for comercio in comercios %}
                            <tr>
                                <td>{{ comercio.nombre }}</td>
                                <td>{{ comercio.direccion }}</td>
                                <td>{% if comercio.activo %}
                                        <span class="badge bg-success">Si</span>
                                    {% else %}
                                        <span class="badge bg-sdanger">No</span>
                                    {% endif %}
                                </td>
                                <td>{{ comercio.fechaCreacion ? comercio.fechaCreacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ comercio.fechaActualizacion ? comercio.fechaActualizacion|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    {#                                    <a class="btn btn-default" role="button"#}
                                    {#                                       target="_blank"#}
                                    {#                                       href="{{ path('novedad', {'id': novedad.id}) }}">#}
                                    {#                                        <i class="fas fa-eye"></i>#}
                                    {#                                    </a>#}
                                    <a class="btn btn-default" role="button"
                                       href="{{ path('comercio_edit', {'id': comercio.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No se encontraron registros</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-12">
            {{ knp_pagination_render(comercios) }}
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary" href="{{ path('comercio_new') }}">Nuevo Comercio</a>
        </div>
    </div>
{% endblock %}
