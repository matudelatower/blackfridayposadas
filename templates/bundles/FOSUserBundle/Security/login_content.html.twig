{% trans_default_domain 'FOSUserBundle' %}
{% block stylesheets %}
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

        .form-signin .form-control:focus {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

    </style>
{% endblock stylesheets %}
{% if error %}
    <div class="alert alert-danger alert-dismissable">
        <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
        <h4>
            <i class="icon fa fa-ban"></i>
            Error!
        </h4>
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

<form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Inicie Sesión</h1>
    <label for="inputUser" class="sr-only">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="inputUser" name="_username" class="form-control" placeholder="{{ 'security.login.username'|trans }}"
           required="" autofocus="">
    <label for="inputPassword" class="sr-only">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="{{ 'security.login.password'|trans }}"
           required="" name="_password">
    {#    <div class="checkbox mb-3">#}
    {#        <label>#}
    {#            <input type="checkbox" value="remember-me"> Remember me#}
    {#        </label>#}
    {#    </div>#}
    <input class="btn btn-lg btn-primary btn-block" type="submit" name="_submit"
           value="{{ 'security.login.submit'|trans }}">
    <p class="mt-5 mb-3 text-muted">© 2017-2019</p>
</form>
