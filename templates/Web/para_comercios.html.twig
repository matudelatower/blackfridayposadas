{% extends '/Web/layout.html.twig' %}

{% block meta_description %}Sección para comercios{% endblock %}
{% block title %}Para Comercios - {% endblock %}

{% block content %}

    <section class="page">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-md-12 p-5">
                    <h2 class="display-4">Formulario de inscripción</h2>
                    <a target="_blank"
                       class="btn btn-primary"
                       href="https://docs.google.com/forms/d/1O5AtgKryFxNU_mnvTBUYuheJVIWsDbt9kFzAG7OVWa0/viewform?edit_requested=true">
                        Inscribirse
                    </a>
                </div>

                <div class="col-md-12 pr-5 pl-5 pb-5">
                    <h2 class="display-4">Tips</h2>

                    <div id="accordion">
                        {% for tip in tips %}

                            <div class="card">
                                <div class="card-header" id="headingOne">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link" data-toggle="collapse"
                                                data-target="#collapse{{ tip.id }}"
                                                aria-expanded="true" aria-controls="collapse{{ tip.id }}">
                                            {{ tip }}
                                        </button>
                                    </h5>
                                </div>

                                <div id="collapse{{ tip.id }}" class="collapse {% if loop.first %}show{% endif %}"
                                     aria-labelledby="headingOne"
                                     data-parent="#accordion">
                                    <div class="card-body">
                                        {{ tip.descripcion }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>


                </div>
            </div>
        </div>

    </section>


{% endblock content %}
