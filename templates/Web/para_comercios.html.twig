{% extends '/Web/layout.html.twig' %}

{% block meta_description %}Sección para comercios{% endblock %}
{% block title %}Para Comercios - {% endblock %}

{% block content %}

    <section class="page">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-md-12 p-5">
                    <h2 class="display-4">Formulario de inscripción</h2>
                    {% if web_texto and web_texto.linkFormularioInscripcionComercios %}
                        <a target="_blank"
                           class="btn btn-primary"
                           href="{{ web_texto.linkFormularioInscripcionComercios }}">
                            Inscribirse
                        </a>
                    {% endif %}
                </div>

                {% if web_texto and web_texto.textoParaComercios %}
                    <div class="col-md-12 pr-5 pl-5 pb-5">
                        {{ web_texto.textoParaComercios | raw }}
                    </div>
                {% endif %}

                {% if web_texto and web_texto.mostrarTips %}
                    <div class="col-md-12 pr-5 pl-5 pb-5">
                        <h2 class="display-4">Tips</h2>

                        <div id="accordion">
                            {% for tip in tips %}

                                <div class="card">
                                    <div class="card-header" id="headingOne">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link" data-toggle="collapse"
                                                    data-target="#collapse{{ tip.id }}"
                                                    aria-expanded="true" aria-controls="collapse{{ tip.id }}">
                                                {{ tip }}
                                            </button>
                                        </h5>
                                    </div>

                                    <div id="collapse{{ tip.id }}" class="collapse {% if loop.first %}show{% endif %}"
                                         aria-labelledby="headingOne"
                                         data-parent="#accordion">
                                        <div class="card-body">
                                            {{ tip.descripcion }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>


                    </div>
                {% endif %}
            </div>
        </div>

    </section>


{% endblock content %}
